<?xml version="1.0" encoding="utf-8"?>
<ledger xmlns:ant="defiantsystem.com" xmlns:xsl="http://www.w3.org/1999/XSL/Transform">

	<!-- app cache -->
	<applications/>
	
	<!-- svg icons -->
	<svg width="0" height="0">{{svg-icons}}</svg>

	<!-- i18n -->
	<i18n>{{i18n}}</i18n>

	<!-- filesystem -->
	<FileSystem name="jdoe" quota="1073741824" kind="_dir" size="4" mode="d755">
		<i mode="d755" kind="_dir" name="Desktop"/>
		<i mode="d755" kind="_dir" name="Documents"/>
		<i mode="d755" kind="_dir" name="Downloads"/>
		<i mode="d755" kind="_dir" name="Mount"/>
		<i mode="d755" kind="_dir" name="Settings"/>
		<i mode="d755" kind="_dir" name="Trashcan"/>
	</FileSystem>

	<!-- settings -->
	<Settings>
		<User id="jdoe" name="John Doe"/>
		<Friends>
			<!-- friends list -->
		</Friends>
		<Entries>
			<i id="workspace-wallpaper-wide" type="boolean"><![CDATA[false]]></i>
			<i id="workspace-1-wallpaper" type="string"><![CDATA[background: repeating-linear-gradient(22.5deg, rgba(255,255,255,0.07) 0px, rgba(255,255,255,0.07) 1px,transparent 1px, transparent 21px,rgba(255,255,255,0.07) 21px, rgba(255,255,255,0.07) 22px,transparent 22px, transparent 62px,rgba(255,255,255,0.07) 62px, rgba(255,255,255,0.07) 63px,transparent 63px, transparent 123px),repeating-linear-gradient(112.5deg, rgba(255,255,255,0.07) 0px, rgba(255,255,255,0.07) 1px,transparent 1px, transparent 21px,rgba(255,255,255,0.07) 21px, rgba(255,255,255,0.07) 22px,transparent 22px, transparent 62px,rgba(255,255,255,0.07) 62px, rgba(255,255,255,0.07) 63px,transparent 63px, transparent 123px),repeating-linear-gradient(67.5deg, rgba(255,255,255,0.07) 0px, rgba(255,255,255,0.07) 1px,transparent 1px, transparent 21px,rgba(255,255,255,0.07) 21px, rgba(255,255,255,0.07) 22px,transparent 22px, transparent 62px,rgba(255,255,255,0.07) 62px, rgba(255,255,255,0.07) 63px,transparent 63px, transparent 123px),repeating-linear-gradient(157.5deg, rgba(255,255,255,0.07) 0px, rgba(255,255,255,0.07) 1px,transparent 1px, transparent 21px,rgba(255,255,255,0.07) 21px, rgba(255,255,255,0.07) 22px,transparent 22px, transparent 62px,rgba(255,255,255,0.07) 62px, rgba(255,255,255,0.07) 63px,transparent 63px, transparent 123px),linear-gradient(90deg, hsl(210,81%,56%),hsl(210,81%,56%));]]></i>
			<i id="dock-position" type="string"><![CDATA[bottom]]></i>
			<i id="dock-hidden" type="boolean"><![CDATA[true]]></i>
			<i id="desktop-icons-hidden" type="boolean"><![CDATA[true]]></i>
			<i id="ui-theme" type="string"><![CDATA[defiant-light]]></i>
			<i id="finder-default-path" type="string"><![CDATA[/fs/Mount/]]></i>
			<i id="finder-file-view" type="string"><![CDATA[columns]]></i>
			<i id="finder-icon-size" type="number"><![CDATA[79]]></i>
			<i id="fs-dialog-style" type="string"><![CDATA[expanded]]></i>
			<i id="fs-show-hidden-folders" type="boolean"><![CDATA[false]]></i>
			<i id="i18n-calendar-months" type="json"><![CDATA[["January","February","March","April","May","June","July","August","September","October","November","December"]]]></i>
			<i id="i18n-calendar-days" type="json"><![CDATA[["Monday","Tuesday","Wednesday","Thursday","Friday","Saturday","Sunday"]]]></i>
			<i id="i18n-calendar-weekStartsWith" type="number"><![CDATA[1]]></i>
			<i id="i18n-calendar-hours" type="string"><![CDATA[24h]]></i>
			<i id="fs-sidebar-favorites" type="raw-xml">
				<item icon="home" path="/fs/"/>
				<item icon="desktop" path="/fs/Desktop"/>
				<item icon="documents" path="/fs/Documents"/>
				<item icon="applications" path="/fs/Applications"/>
			</i>
		</Entries>
		<WorkSpace>
			<i name="ws-1">
				<i type="app" ns="{{app-ns}}" id="{{app-id}}"/>
			</i>
		</WorkSpace>
	</Settings>

	<!-- context menu -->
	<ContextMenu>
		<MenuBar for="system">
			<Group>
				<Menu icon="icon-def-ant" name="Defiant">
					<Menu name="About Defiant" shell="sys -c"/>
				</Menu>
			</Group>
			<Group>
				<Menu icon="icon-clock" class="menubar-date-time_">
					<Menu name="View as Analogue" shell="sys -m clock analog" check-group="menubar-clock"/>
					<Menu name="View as Digital" shell="sys -m clock digital" check-group="menubar-clock" is-checked="1"/>
				</Menu>
			</Group>
		</MenuBar>

		<Menu for="desktop">
			<Menu name="Reload" shell="sys -r"/>
			<Menu type="divider"/>
			<Menu name="Desktop Settings" shell="win -o preferences desktop"/>
		</Menu>
	</ContextMenu>

	<!-- shell -->
	<Shell>
		<i object="sys" path="defiant_" type="System" description="System Object">
			<i switch="a" name="desktop_.selectAll_" arg="NONE" description="Select all files on desktop."/>
			<i switch="b" name="manager_.info_" arg="NONE" description="Returns system info."/>
			<i switch="c" name="manager_.about_" arg="NONE" description="Opens application about Defiant."/>
			<i switch="d" name="dock_.position_" arg="[left|bottom|right]" description="Positions dock."/>
			<i switch="h" name="dock_.showHide_" arg="[true|false]" description="Toggles dock."/>
			<i switch="i" name="desktop_.updateIconColor_" arg="NONE" description="Set folder icon color desktop."/>
			<i switch="m" name="menuBar_.settings_" arg="clock [digital|analog]" description="Changes menubar clock style."/>
			<i switch="n" name="sideBar_.toggleView_" arg="[true|false]" description="Toggle sidebar view."/>
			<i switch="o" name="desktop_.switchTheme_" arg="[name]" description="Switches UI theme."/>
			<i switch="p" name="shell_.parseCommand_" arg="[stdIn]" description="Parses given string as Shell command."/>
			<i switch="s" name="spotlight_.toggleSearch_" arg="NONE" description="Toggle spotlight search."/>
			<i switch="t" name="desktop_.toggleIcons_" arg="[true|false]" description="Toggle icons on desktop."/>
			<i switch="v" name="menuBar_.updateVolume_" arg="[1-10]" description="Changes system volume."/>
			<i switch="x" name="manager_.logoutUser_" arg="NONE" description="Logout user."/>
		</i>
		<i object="win" path="defiant_.window_" type="Window" description="Controls Windows and Applications">
			<i switch="a" name="about_" arg="[id]" description="Shows info about application."/>
			<i switch="o" name="open_" arg="[id]" description="Opens application."/>
			<i switch="c" name="close_" arg="[id]" description="Closes window."/>
			<i switch="s" name="updateState_" arg="state [id]" description="Changes window state; min|max|restore."/>
		</i>
		<i object="fs" path="defiant_.fileSystem_" type="Filesystem" description="Filesystem Interface">
			<i switch="j" name="path_.join_" arg="[path, path]" description="Joins paths."/>
			<i switch="i" name="diskInfo_" arg="NONE" description="Returns user disk information."/>
			<i switch="l" name="list_" hidden="1" arg="[path]" description="Returns folder contents as object."/>
			<i switch="p" name="previewFile_" arg="[file]" description="Returns a preview of file, if small."/>
			<i switch="r" name="readFile_" arg="[file]" description="Returns file."/>
			<i switch="s" name="writeFile_" arg="[file, data, overwrite]" description="Saves file to filesystem."/>
			<i switch="d" name="deleteItem_" arg="[file]" description="Moves item to filesystem trashcan."/>
			<i switch="y" name="copyItem_" arg="[src, target]" description="Copy item to new path."/>
			<i switch="c" name="makeDir_" arg="[path]" description="Creates folder in filesystem."/>
			<i switch="e" name="emptyTrashcan_" arg="NONE" description="Empties filesystem trashcan."/>
			<i switch="m" name="moveItem_" arg="[old, new]" description="Move / rename  item in filesystem."/>
			<i switch="o" name="open_" arg="[file]" description="Opens file in associated app."/>
			<i switch="u" name="openUrl_" arg="[url]" description="Fetches URL, returns like file."/>
			<i switch="n" name="sync_" arg="NONE" alias="sync" description="Syncs files to server, if any in offline cache."/>
			<i switch="x" name="unzip_" arg="[src, target]" description="Uncompresses a zip file."/>
			<i switch="z" name="zip_" arg="[target, src]" description="Compresses file(s)."/>
		</i>
		<i object="ws" path="defiant_.workSpace_" type="Workspace" description="Workspace API">
			<i switch="a" name="getAllWs_" arg="[type]" description="Returns all wallpapers."/>
			<i switch="w" name="wallpaper_" arg="[id, [bg]]" description="Sets / gets background of given workspace."/>
			<i switch="s" name="switchTo_" arg="[int]" description="Switches to workspace."/>
		</i>
		<i object="user" path="defiant_.user_" type="User" description="User related details.">
			<i switch="i" name="info_" arg="[username]" alias="whoami" description="Info about user."/>
			<i switch="m" name="message_" arg="[user, string]" description="Sends message to user."/>
			<i switch="f" name="friends_" arg="NONE" description="List of current user friends."/>
			<i switch="p" name="approveFriend_" arg="[object]" description="Approve friend request."/>
			<i switch="a" name="addFriend_" arg="[username]" description="Add friend."/>
			<i switch="r" name="removeFriend_" arg="[username]" description="Remove friend."/>
		</i>
	</Shell>
</ledger>
